default: standard

primary_aggregate: "apc_amount_sum"

table_items:
  - name: 'apc_amount_sum'
    type: 'aggregate'
    format: 'monetary'
  - name: 'apc_num_items'
    type: 'aggregate'
    format: 'number'
  - name: 'cost_data_num_items'
    type: 'aggregate'
    format: 'number'
    not_shown_in: 'standard'
  - name: 'apc_amount_avg'
    type: 'aggregate'
    format: 'monetary'
  - name: 'apc_amount_stddev'
    type: 'aggregate'
    format: 'monetary'
  - name: 'percentage'
    type: 'total_percentage'
    format: 'percentage'
    relates_to: 'apc_amount_sum'
    label: 'Percentage'

filters:
  - field: 'period'
    name: 'Year'
    nullable: true
  - field: 'is_hybrid'
    name: 'Hybrid Status'
    nullable: true

hierarchies:
    standard:
        name: Standard
        cuts:
            cost_type: apc
        drilldowns:
